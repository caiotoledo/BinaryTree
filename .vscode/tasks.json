{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_debug",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/k mkdir build & cd build & cmake -GNinja VERBOSE=1 -DCMAKE_BUILD_TYPE=Debug ../ & ninja & exit "
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run_main",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/k cd build & ninja & BinaryTree.exe & exit "
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
    ]
}